  "repository": {
    "type": "git",
    "url": "https://github.com/loicnico96/boardgames"
  },
  "scripts": {
    "all": "yarn workspaces foreach -vpi --exclude @boardgames/root run",
    "build": "yarn workspaces foreach -vpi --exclude @boardgames/root --topological-dev run build",
    "common": "yarn workspace @boardgames/common",
    "components": "yarn workspace @boardgames/components",
    "deploy": "vercel",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "devtools": "yarn workspace @boardgames/devtools",
    "precommit": "yarn workspaces foreach -v --exclude @boardgames/root run precommit",
    "prepare": "husky install",
    "utils": "yarn workspace @boardgames/utils",
    "web": "yarn workspace @boardgames/web"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "7.0.2"
  }
}
