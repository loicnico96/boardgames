{
  "name": "@boardgames/root",
  "private": true,
  "scripts": {
    "all": "yarn workspaces foreach -vpi run",
    "build": "yarn workspaces foreach -vpi --topological-dev run build",
    "common": "yarn workspace @boardgames/common",
    "deploy": "vercel",
    "precommit": "yarn workspaces foreach -v run precommit",
    "prepare": "husky install",
    "web": "yarn workspace @boardgames/web"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "7.0.2"
  }
}
