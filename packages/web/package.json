  "private": true,
  "bugs": "https://github.com/loicnico96/boardgames",
  "homepage": "https://github.com/loicnico96/boardgames/tree/main/package/web#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/loicnico96/boardgames",
    "directory": "packages/web"
  },
  "scripts": {
    "build": "next build",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx}'",
    "dev": "next dev",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "precommit": "lint-staged",
    "start": "next start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@boardgames/common": "workspace:*",
    "@boardgames/components": "workspace:*",
    "firebase": "9.0.2",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-toastify": "8.0.2",
    "zustand": "3.5.10"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@testing-library/dom": "8.5.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.0",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/react": "17.0.20",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "babel-jest": "27.2.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.0",
    "lint-staged": "11.1.2",
    "prettier": "2.4.0",
    "typescript": "4.4.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^lib(.*)$": "<rootDir>/src/lib$1",
      "^pages(.*)$": "<rootDir>/src/pages$1"
    },
    "testEnvironment": "jsdom"
  }
}
